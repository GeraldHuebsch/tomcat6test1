#!/bin/bash -e
PATH=/bin/:/usr/bin:$PATH

CONFIGDIR=configuration/
LOGDIR=logs/

source $OPENSHIFT_CARTRIDGE_SDK_BASH
export CATALINA_HOME=$OPENSHIFT_HOMEDIR'casopen/catalinahome'
export CATALINA_BASE=$OPENSHIFT_HOMEDIR'casopen/catalinabase'
export JAVA_OPTS='-DservletContextName='$OPENSHIFT_APP_NAME' -DconfigurationsFilePath="'$OPENSHIFT_DATA_DIR$CONFIGDIR$OPENSHIFT_APP_NAME'/" -DlogsFilePath='$OPENSHIFT_DATA_DIR$LOGDIR' -Dorg.osgi.service.http.port='$OPENSHIFT_CASOPEN_HTTP_PORT' -Declipse.ignoreApp=true -Dosgi.noShutdown=true -Dorg.apache.commons.logging.Log=org.apache.commons.logging.impl.Jdk14Logger -Dmail.mime.charset=UTF-8 -Xms512m -Xmx512m -XX:PermSize=512m -XX:MaxPermSize=512m -Dorg.eclipse.rwt.clientLogLevel=ALL -Dde.cas.rap.util.ResourceUtil.delete_old -Djavax.xml.validation.SchemaFactory:http://www.w3.org/2001/XMLSchema=org.apache.xerces.jaxp.validation.XMLSchemaFactory -Dcom.sun.management.jmxremote=true -Dorg.eclipse.jdt.core.compiler.source=1.5 -Dorg.eclipse.jdt.core.compiler.compliance=1.5 -Dorg.eclipse.jdt.core.compiler.codegen.TargetPlatform=1.5 -ea'


function start {
    $CATALINA_BASE/bin/catalina.sh run &
}

function stop {
	$CATALINA_BASE/bin/catalina.sh stop
}

function restart {
    echo "not yet implemented"
}

function catchall {
    echo "not yet implemented"
}

case "$1" in
  start)       start ;;
  stop)        stop ;;
  restart)     restart ;;
  status)      status ;;
  reload)      catchall ;;
  tidy)        catchall ;;
  pre-build)   catchall ;;
  build)       catchall ;;
  deploy)      catchall ;;
  post-deploy) catchall ;;
  *)           exit 0
esac

exit 0